@model stationary_management_system.Models.Bill

@{
    ViewData["Title"] = "Details";
}

<div class="card mt-4">
    <div class="card-body">
        <div class="">
            <h1 class="text-center">Bill Details</h1>
        </div>
        <hr>
        <div class="d-flex flex-column">
            <h5>Bill Details</h5>
            <div>
                <table>
                    <tbody>
                        <tr>
                            <td>Bill No:</td>
                            <td>@Html.DisplayFor(model => model.Id)</td>
                        </tr>
                        <tr>
                            <td>Date:</td>
                            <td class="mx-2">@Html.DisplayFor(model => model.DateTime)</td>
                        </tr>
                    </tbody>
                </table>
                <p class="m-0">Products Added:</p>
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <td>Name</td>
                            <td>Price</td>
                            <td>Quantity</td>
                            <td>Totalprice</td>
                        </tr>
                        @foreach (var item in @ViewBag.Items)
                        {
                            <tr>
                                <td>
                                    @item.Name
                                </td>
                                <td>
                                    @item.Price
                                </td>
                                <td>
                                    @item.Quantity
                                </td>
                                <td>
                                    @item.Totalprice
                                </td>

                            </tr>
                        }
                        <tr>
                            <td colspan="4">
                                <div class="d-flex justify-content-start" style="font-weight: bold;">
                                    <h4>Grand Total: </h4>
                                    <h4 class="mx-2">@Html.DisplayFor(model => model.GrandTotal)<span>rs</span></h4>
                                </div>
                            </td>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
        <div class="d-flex justify-content-start align-content-center">
            <button class="btn btn-outline-success" disabled>Confirmed</button>
        </div>
    </div>
</div>
<div class="my-4">
    <a asp-action="Index">Back to List</a>
</div>