@model IEnumerable<CollegeApp.Models.Bill>

@{
    ViewData["Title"] = "Past Bills";
}
<h2>Past Bills</h2>
<table id="example" class="table table-striped table-bordered" style="width:100%">
    <thead>
        <tr>
            <th>
                #
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GrandTotal)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GrandTotal)
            </td>
            <td>
                <a asp-action="Details" class="btn btn-success" asp-route-id="@item.Id">
                    <i class="fas fa-info"></i>
                </a>
            </td>
        </tr>
}
    </tbody>
</table>
